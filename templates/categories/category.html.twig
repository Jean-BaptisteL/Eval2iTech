{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}
<h1 class="test-center">{{category.name}}</h1>
<div class="d-flex justify-content-center">
    <div class="list-group">
        {% for product in category.products %}
            <a href="{{ path('app_product_details', {'id': product.id}) }}" class="list-group-item list-group-item-action" aria-current="true">
                {{product.name}}
            </a>
        {% endfor %}
    </div>
</div>
{% endblock %}